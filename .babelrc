{ 
      "env": {
            "development": {
                  "presets": ["es2015", "stage-0", "react", "react-hmre"],
                  "plugins": [
                        "transform-decorators-legacy",
                        [
                              "react-transform", {
                                    "transforms": [
                                          {
                                                "transform": "react-transform-hmr",
                                                "imports": [ "react" ],
                                                "locals": [ "module" ]
                                          }
                                    ]
                              }
                        ]
                  ]
            },
            "production": {
                  "presets": ["es2015", "stage-0", "react"],
                  "plugins": ["transform-decorators-legacy"]
            }
      }
}
